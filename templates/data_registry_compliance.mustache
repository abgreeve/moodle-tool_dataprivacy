<div>
    <h2>Plugin compliance registry</h2>
    {{#types}}
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <h3 class="d-inline" id="{{plugin_type_raw}}">{{plugin_type}}</h3>
                    <span class="pull-right"><a class="other-expand" href='#'>{{#pix}}t/collapsed, moodle, string!{{/pix}}</a></span>
                </div>
            </div>
                {{#plugins}}
                    {{> tool_dataprivacy/component_status}}
                {{/plugins}}
        </div>
    {{/types}}
</div>
{{#js}}
require(['jquery', 'core/url'], function($, url) {

    var expandedImage = $('<img alt="" src="' + url.imageUrl('t/expanded') + '"/>');
    var collapsedImage = $('<img alt="" src="' + url.imageUrl('t/collapsed') + '"/>');

    $('.expand').click(function(e) {
        e.preventDefault();
        e.stopPropagation();
        e.stopImmediatePropagation();
        var component = $(this).data('component');
        var metadata = $('[data-whatchama=\'' + component + '\']');
        var metainfo = metadata.attr('class');
        // var metainfo = $('[data-whatchama=\'' + component + '\']').attr('class');
        if (metainfo === 'hide') {
            $('[data-whatchama=\'' + component + '\']').attr('class', 'visible');
            $(this).children('img').attr('src', expandedImage.attr('src'));
            metadata.attr('aria-expanded', true);
        } else {
            $('[data-whatchama=\'' + component + '\']').attr('class', 'hide');
            $(this).children('img').attr('src', collapsedImage.attr('src'));
            metadata.attr('aria-expanded', false);
        }
        
    });
});
{{/js}}
